<h2>Show post</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @post.title %>
  </li>

  <li>
    <strong>Body:</strong>
    <%= markdown(@post.body) %>
  </li>

  <li>
    <strong>Parse post:</strong>
    <%= markdown(@parse_post) || "Whatever" %>
  </li>

</ul>

<%=
  link "Edit",
  to: user_post_path(@conn, :edit, @user, @post)
%>
<%=
  link "Back",
  to: user_post_path(@conn, :index, @user)
%>
